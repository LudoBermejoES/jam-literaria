<div class="session-join-container">
  <div class="card">
    <div class="card-header">
      <h2>Unirse a una Sesión</h2>
    </div>
    
    <div class="card-body">
      <p class="mb-3">Ingresa el código de la sesión a la que deseas unirte.</p>
      
      <% if (error) { %>
        <div class="alert alert-error">
          <%= error %>
        </div>
      <% } %>
      
      <form action="/session/join" method="POST">
        <div class="form-group">
          <label for="code">Código de Sesión</label>
          <input 
            type="text" 
            id="code" 
            name="code" 
            placeholder="Ejemplo: Borges42" 
            autofocus 
            required
            value="<%= locals.code || '' %>"
          >
        </div>
        
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Unirse</button>
          <a href="/session" class="btn">Cancelar</a>
        </div>
      </form>
    </div>
  </div>
</div>

<style>
  .session-join-container {
    max-width: 600px;
    margin: 2rem auto;
  }
  
  .mb-3 {
    margin-bottom: 1.5rem;
  }
  
  .form-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 1.5rem;
  }
</style> 