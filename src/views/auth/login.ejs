<div class="auth-container">
  <div class="card">
    <div class="card-header">
      <h2>Bienvenido a la Jam Literaria</h2>
    </div>
    
    <div class="card-body">
      <p class="welcome-text">Para comenzar, ingresa tu nombre:</p>
      
      <% if (error) { %>
        <div class="alert alert-error">
          <%= error %>
        </div>
      <% } %>
      
      <form action="/auth" method="POST">
        <div class="form-group">
          <label for="name">Nombre</label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            placeholder="Tu nombre aquÃ­" 
            autofocus 
            required
          >
        </div>
        
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Continuar</button>
        </div>
      </form>
    </div>
  </div>
</div>

<style>
  .auth-container {
    max-width: 500px;
    margin: 2rem auto;
  }
  
  .welcome-text {
    margin-bottom: 1.5rem;
  }
  
  .form-actions {
    margin-top: 1.5rem;
    text-align: center;
  }
  
  .alert {
    padding: 0.75rem 1.25rem;
    margin-bottom: 1rem;
    border: 1px solid transparent;
    border-radius: var(--border-radius);
  }
  
  .alert-error {
    color: #721c24;
    background-color: #f8d7da;
    border-color: #f5c6cb;
  }
  
  .btn-sm {
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
  }
</style> 